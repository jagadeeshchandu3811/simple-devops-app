pipeline {
    agent any
    tools { nodejs 'node18' }

    stages {
        stage('Checkout') {
            steps { checkout scm }
        }

        stage('Install & Test') {
            steps {
                dir('simple-devops-app') {
                    sh 'node -v && npm -v'
                    sh 'npm ci || npm install'
                    sh 'npm test'
                    sh 'echo "Tests passed" > result.txt'
                    archiveArtifacts artifacts: 'result.txt', fingerprint: true
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('simple-devops-app') {
                    sh 'docker build -t simple-devops-node-app .'
                }
            }
        }
    }
}
