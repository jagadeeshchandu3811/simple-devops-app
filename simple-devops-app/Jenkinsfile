pipeline {
  agent any
  environment {
    IMAGE_NAME = "simple-devops-node-app"
  }
  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Install') {
      steps {
        sh 'npm install'
      }
    }
    stage('Test') {
      steps {
        sh 'npm test'
      }
    }
    stage('Build Docker Image') {
      steps {
        sh 'docker build -t $IMAGE_NAME .'
      }
    }
    stage('Archive') {
      steps {
        archiveArtifacts artifacts: '**/*.js', fingerprint: true
      }
    }
  }
}